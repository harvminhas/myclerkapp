<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cn="urn:import:com.harvraja.myclerk.client.reqwidgets.common">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel ui:field="requestPanel" borderWidth="1" spacing="5" width="346px">
			<g:HorizontalPanel width="326px">
				<g:Label text="Moving Type" width="100px" height="29px"/>
				<g:ListBox ui:field="movingType" visibleItemCount="1"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="328px">
				<g:Label text="From City:" width="78px"/>
				<cn:AddressWidget ui:field="fromCityWidget"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="329px">
				<g:Label text="To City" width="86px"/>
				<cn:AddressWidget ui:field="toCityWidget"/>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="329px">
				<g:Label text="Expected Moving Date" width="86px"/>
			</g:HorizontalPanel></g:VerticalPanel>
		<g:Button ui:field="submit">Submit</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 